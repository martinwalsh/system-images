{
  "variables": {
    "ssh_username": "root",
    "ssh_password": "",
    "esx_username": "root",
    "esx_password": "",
    "esx_host": null
  },
  "provisioners": [
    {
      "type": "salt-masterless",
      "local_state_tree": "../salt/srv/salt",
      "local_pillar_roots": "../salt/srv/pillar",
      "skip_bootstrap": true
    }
  ],
  "builders": [
    {
      "type": "vmware-iso",
      "disk_type_id": "thin",
      "network_adapter_type": "vmxnet3",
      "remote_type": "esx5",
      "remote_host": "{{ user `esx_host` }}",
      "remote_datastore": "datastore1",
      "remote_username": "{{ user `esx_username` }}",
      "remote_password": "{{ user `esx_password` }}",
      "vnc_disable_password": true,
      "boot_command": [
        "<tab> inst.text inst.ks=hd:fd0:/ks.cfg<enter><wait>"
      ],
      "floppy_files": [
        "config/ks.cfg"
      ],
      "boot_wait": "10s",
      "disk_size": 81920,
      "guest_os_type": "centos-64",
      "headless": true,
      "http_directory": "config",
      "iso_urls": [
        "CentOS-7-x86_64-Minimal-1804.iso",
        "http://mirrors.mit.edu/centos/7/isos/x86_64/CentOS-7-x86_64-Minimal-1804.iso"
      ],
      "iso_checksum_type": "sha256",
      "iso_checksum": "714acc0aefb32b7d51b515e25546835e55a90da9fb00417fbee2d03a62801efd",
      "ssh_username": "{{ user `ssh_username` }}",
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_port": 22,
      "ssh_wait_timeout": "15m",
      "shutdown_command": "/sbin/shutdown -h now",
      "vm_name": "centos-7-x86_64",
      "vmx_data": {
        "cpuid.coresPerSocket": 1,
        "numvcpus": 1,
        "memsize": 512,
        "ethernet0.present": "TRUE",
        "ethernet0.startConnected": "TRUE",
        "ethernet0.networkName": "VM Network"
      },
      "version": 14,
      "keep_registered": true,
      "skip_export": true
    }
  ],
  "post-processors": [
  ]
}
