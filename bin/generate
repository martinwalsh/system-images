#!/usr/bin/env python
import io
import sys
import json
import wrapper


def usage():
    print(f'{sys.argv[0]}: path/to/yaml/config')
    sys.exit(1)


if __name__ == '__main__':
    try:
      path = sys.argv[1]
    except IndexError:
        usage()
    else:
        wrapper.create_build_dir(wrapper.render_yaml(path))
